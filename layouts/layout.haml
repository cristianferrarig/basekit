!!!
%html
  %head
    %meta(charset="utf-8")

    -# Always force latest IE rendering engine or request Chrome Frame
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")

    %title= "#{current_page.data.title}" + data.config.title

    -# Always force latest IE rendering engine or request Chrome Frame
    %meta{ "http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }

    -# Activate ClearType technology for smoothing fonts for easy reading in mobile IE
    %meta{ "http-equiv" => "cleartype", content: "on" }

    %meta{ name: "description", content: data.config.description }
    %meta{ name: "keywords",    content: data.config.keywords }
    %meta{ name: "author",      content: data.config.author }

    -# SEO: If mobile URL is different from desktop URL, add a canonical link to the desktop page
    -# %link{ rel: "canonical", href: "http://www.domain-name.com/" }

    = stylesheet_link_tag "application"
    = stylesheet_link_tag  "hashgrid" if not build?

  %body{ class: "#{page_classes}" }

    = yield

    -# Placed at the end of the document so the pages load faster
    = javascript_include_tag  "application"
    = javascript_include_tag  "hashgrid" if not build?
